{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExtraNonNullAssertion": "warn",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "files": {
    "ignore": ["src/routeTree.gen.ts", "src/Rhythmate-Service/*"]
  }
}
